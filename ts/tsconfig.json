{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "~canvas/*": ["src/canvas/*"],
      "~drawable/*": ["src/drawable/*"],
      "~entity/*": ["src/entity/*"],
      "~entityManager/*": ["src/entityManager/*"],
      "~math/*": ["src/math/*"],
      "~primitive/*": ["src/primitive/*"],
      "~test/*": ["src/test/*"],
      "~util/*": ["src/util/*"]
    },
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "node_modules/*", "dist/**/*", "public/**/*"]
}
